@model MVC_One.Models.TaskModel

@{
    var task = Model;
}

<h1>Edit Task</h1>

<form asp-action="Edit" method="post" class=" p-2 d-flex flex-column gap-3 w-50">
    <div class="form-group">
        <label class="form-label" for="name">Name</label>
        <input type="text" class="form-control" asp-for="Name"  value="@task.Name"/>
    </div>
    <div class="form-group">
        <label class="form-label" for="progress">Progress</label>
        <input type="range" class="form-range" asp-for="Progress" min="0" max="100" value="@task.Progress" />
    </div>

    <div class="mb-3">
        <label for="Status" class="form-label">Choose option</label>
        <select class="form-select" asp-for="Status">
            <option value="1">New</option>
            <option value="2">In Progress</option>
            <option value="3">On Hold</option>
            <option value="4">Completed</option>
        </select>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsOverdue" value="@task.IsOverdue">
        <label class="form-check-label" for="IsOverdue">Is Overdue</label>
    </div>

    <button type="submit" class="mt-2 btn btn-primary w-25 mx-auto">Submit</button>
</form>